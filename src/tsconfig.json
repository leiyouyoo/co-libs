{
  "extends": "../tsconfig.json",
  "experimentalDecorators": true,
  "compilerOptions": {
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "../out-tsc/app",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@core/*": [
        "app/core/*"
      ],
      "@shared": [
        "app/shared"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@co/*": [
        "../packages/*"
      ]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "templates/*.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
