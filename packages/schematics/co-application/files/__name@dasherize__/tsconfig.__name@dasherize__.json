{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ]
  },
  "files": [
    "apps/<%= name %>/main.ts",
    "apps/<%= name %>/polyfills.ts"
  ],
  "include": [
    "apps/<%= name %>/**/*.d.ts"
  ],
  "exclude": [
    "apps/<%= name %>/test.ts",
    "apps/<%= name %>/**/*.spec.ts"
  ]
}